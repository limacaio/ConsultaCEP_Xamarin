<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="40" Spacing="30">
        
        <Image Margin="20"  Source="logo.png"/>
        <Entry x:Name="etyCep" Placeholder="Informe o cep" PlaceholderColor="#FFBF00" BackgroundColor="White" HorizontalTextAlignment="Center"/>
        <Button x:Name="btnConsultar" Text="CONSULTAR" TextColor="White" BackgroundColor="DarkBlue" />
       
        <Label x:Name="lbResultado" Text="" FontSize="Medium" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />

    </StackLayout>

</ContentPage>
